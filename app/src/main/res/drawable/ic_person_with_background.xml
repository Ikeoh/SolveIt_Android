<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camada 1: Fundo Azul Arredondado à Esquerda -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/solveit_fundo_edittext_icone" />
            <!-- Ajuste o raio se o seu edittext_background tiver um raio diferente -->
            <corners
                android:bottomLeftRadius="8dp"
                android:topLeftRadius="8dp"
                android:bottomRightRadius="0dp"
                android:topRightRadius="0dp" />
            <!-- Adiciona um tamanho mínimo para garantir que o fundo seja visível, ajuste conforme necessário -->
            <size
                android:width="48dp"
                android:height="48dp" /> <!-- Ajuste conforme a altura do seu EditText -->
        </shape>
    </item>

    <!-- Camada 2: Ícone de Pessoa (branco) sobre o fundo -->
    <!-- Os atributos android:width e android:height aqui definem o tamanho do ícone em si -->
    <!-- Os atributos android:top, android:bottom, android:left, android:right controlam o padding do ícone DENTRO do seu espaço no layer-list -->
    <item
        android:drawable="@drawable/ic_person"
        android:width="24dp"  android:height="24dp"
        android:gravity="center"
        android:top="12dp"    android:bottom="12dp"
        android:left="12dp"   android:right="12dp">
        <!-- O android:drawable="@drawable/ic_person" já deve ter o tint branco
             Se o ícone não aparecer, pode ser um problema com o ic_person.xml em si
             ou o tint não está sendo aplicado corretamente nele. -->
    </item>

</layer-list>
