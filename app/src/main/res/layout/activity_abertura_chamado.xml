<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context=".AberturaChamadoActivity">

    <!-- 1. TOOLBAR CUSTOMIZADA (SEM ALTERAÇÕES) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_abertura"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/solveit_azul_primario"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Botão de Voltar -->
            <ImageButton
                android:id="@+id/btn_voltar"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Voltar"
                android:src="@drawable/ic_arrow_back"
                app:tint="@android:color/white" />

            <!-- Título da Toolbar (centralizado) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Abertura de Chamado"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Ícones da Direita (Notificações e Perfil) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_notifications"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Notificações"
                    android:src="@drawable/ic_notifications"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btn_profile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Perfil"
                    android:src="@drawable/ic_profile"
                    app:tint="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- 2. CONTEÚDO DO FORMULÁRIO COM ROLAGEM -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- OUTROS CAMPOS DO FORMULÁRIO (SEM ALTERAÇÕES) -->
            <TextView
                style="@style/App.Form.Label"
                android:text="Título*" />
            <EditText
                android:id="@+id/edit_titulo"
                style="@style/App.Form.Input"
                android:hint="Título"
                android:inputType="textCapSentences" />

            <TextView
                style="@style/App.Form.Label"
                android:layout_marginTop="16dp"
                android:text="Nome do solicitante*" />
            <EditText
                android:id="@+id/edit_nome_solicitante"
                style="@style/App.Form.Input"
                android:hint="Nome"
                android:inputType="textPersonName" />

            <TextView
                style="@style/App.Form.Label"
                android:layout_marginTop="16dp"
                android:text="Prioridade*" />
            <FrameLayout
                style="@style/App.Form.Input"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">
                <Spinner
                    android:id="@+id/spinner_prioridade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </FrameLayout>

            <TextView
                style="@style/App.Form.Label"
                android:layout_marginTop="16dp"
                android:text="E-mail de contato*" />
            <EditText
                android:id="@+id/edit_email"
                style="@style/App.Form.Input"
                android:hint="seunome@suaempresa.com"
                android:inputType="textEmailAddress" />

            <TextView
                style="@style/App.Form.Label"
                android:layout_marginTop="16dp"
                android:text="Descrição*" />
            <EditText
                android:id="@+id/edit_descricao"
                style="@style/App.Form.Input"
                android:layout_height="120dp"
                android:gravity="top"
                android:hint="Escreva aqui a descrição"
                android:inputType="textMultiLine"
                android:paddingTop="16dp" />

            <!-- ========================================================================= -->
            <!-- ✨ CAMPO "ANEXAR ARQUIVO" COM A SOLUÇÃO DEFINITIVA APLICADA ✨ -->
            <!-- ========================================================================= -->
            <TextView
                style="@style/App.Form.Label"
                android:layout_marginTop="16dp"
                android:text="Anexar arquivo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/borda_edittext"
                android:orientation="horizontal">

                <!-- 1. Botão da Esquerda com Ícone '+' (sem alteração) -->
                <ImageButton
                    android:id="@+id/btn_anexar_icone"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0"
                    android:contentDescription="Anexar arquivo"
                    android:src="@drawable/ic_add"
                    app:tint="#616161" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#D0D0D0" />

                <!-- 2. Texto do Nome do Arquivo (sem alteração) -->
                <TextView
                    android:id="@+id/text_nome_arquivo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Selecione o arquivo"
                    android:textColor="#757575"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#D0D0D0" />

                <!-- 3. Botão "Escolha" (SUBSTITUÍDO POR TEXTVIEW PARA CONTROLE TOTAL) -->
                <TextView
                    android:id="@+id/btn_anexar_escolha"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="90dp"
                    android:background="#E0E0E0"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Escolha"
                    android:textAllCaps="false"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- BOTÕES DE AÇÃO (SEM ALTERAÇÕES) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_confirmar"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_botao_arredondado"
                    android:text="Confirmar"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@color/solveit_azul_primario" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/btn_cancelar"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_botao_arredondado"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:backgroundTint="#A9A9A9" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
