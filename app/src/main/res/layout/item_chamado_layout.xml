<?xml version="1.0" encoding="utf-8"?>
<!-- Usando LinearLayout para garantir o alinhamento perfeito com o cabeçalho -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingTop="16dp"
    android:paddingEnd="8dp"
    android:paddingBottom="16dp"
    android:gravity="center_vertical">

    <!-- Os pesos (layout_weight) são os mesmos usados no headerLayout -->

    <TextView
        android:id="@+id/textViewId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:textColor="@color/solveit_texto_secundario"
        android:textSize="14sp"
        tools:text="1" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:textColor="@color/solveit_texto_primario"
        android:textSize="16sp"
        tools:text="Título do chamado aqui" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipPrioridade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:chipBackgroundColor="@color/prioridade_media"
        tools:text="Média" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.2"
        android:gravity="end"
        android:textColor="@color/solveit_texto_secundario"
        android:textSize="14sp"
        tools:text="Aberto" />

</LinearLayout>
